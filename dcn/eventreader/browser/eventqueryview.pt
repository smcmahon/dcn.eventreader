<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="dcn.eventreader">
<body>
    <div metal:fill-slot="main">
        <tal:main-macro metal:define-macro="main">

<pre tal:content="view/getQueryParams" />
<pre tal:content="view/getSiteParams" />
<pre tal:content="view/getParams" />
<pre tal:content="view/myUrl" />
<pre tal:content="view/monthUrl" />
<pre tal:content="view/weekUrl" />
<pre tal:content="view/dayUrl" />
<pre tal:content="view/nextUrl" />
<pre tal:content="view/prevUrl" />

            <table class="ploneCalendar" summary="Calendar" class="calbodytable">
                <tr>
                    <th tal:repeat="day view/getWeekdays" tal:content="day" class="caldayheader" />
                </tr>
                <tr tal:repeat="week view/eventMonth" class="calweekrow">
                    <td tal:repeat="eday week">
                        <div tal:content="eday/day" tal:attributes="class python:eday['today'] and 'caldaynumber caldaytoday' or 'caldaynumber'" />
                        <div tal:repeat="event eday/events" class="caleventtitle" >
                            <span tal:content="string:&bull; ${event/begins}" tal:condition="python:event['begins'] != '12:00am'"/>
                            <a href="#"
                               tal:attributes="title event/description">
                                <span tal:content="event/title" />
                            </a>
                        </div>
                    </td>
                </tr>
            </table>

        </tal:main-macro>
    </div>
</body>
</html>
